# AWS Configuration
aws_region = "eu-central-1"
aws_profile = ""  # Optional: set to your AWS profile name (e.g., "my-sso-profile")

# Terraform State Management (use your existing S3 bucket)
terraform_state_bucket = "your-existing-terraform-state-bucket"

# Project Configuration
project_name = "telegram-notify-bot"
stage_name = "prod"

# Telegram Configuration (required)
telegram_bot_token = "123456789:your_bot_token_here"
telegram_chat_id = "your_chat_id_here"

# Optional Configuration
lambda_timeout = 15
log_retention_days = 7