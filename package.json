{
  "name": "telegram-notify-bot",
  "version": "1.0.0",
  "description": "Serverless Telegram bot for sending notifications. Deploy with one command to AWS Lambda.",
  "main": "index.ts",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --target=node24 --outfile=dist/index.js --external:@aws-sdk/*",
    "dev": "esbuild index.ts --bundle --platform=node --target=node24 --outfile=dist/index.js --watch --external:@aws-sdk/*",
    "tofu:init": "cd terraform && tofu init -backend-config=backend.hcl",
    "tofu:deploy": "cd terraform && tofu apply -auto-approve",
    "tofu:destroy": "cd terraform && tofu destroy -auto-approve",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domengabrovsek/telegram-notify-bot.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "notifications",
    "aws",
    "lambda",
    "serverless",
    "opentofu"
  ],
  "author": "Domen GabrovÅ¡ek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/domengabrovsek/telegram-notify-bot/issues"
  },
  "homepage": "https://github.com/domengabrovsek/telegram-notify-bot#readme",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "undici": "^7.19.2",
    "@aws-sdk/client-ssm": "^3.980.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
