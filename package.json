{
  "name": "telegram-notify-bot",
  "version": "1.0.0",
  "description": "Serverless Telegram bot for sending notifications. Deploy with one command to AWS Lambda.",
  "main": "index.ts",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --target=node22 --outfile=dist/index.js --external:aws-sdk",
    "dev": "esbuild index.ts --bundle --platform=node --target=node22 --outfile=dist/index.js --watch --external:aws-sdk",
    "terraform:init": "cd terraform && terraform init -backend-config=backend.hcl",
    "terraform:deploy": "cd terraform && terraform apply -auto-approve",
    "terraform:destroy": "cd terraform && terraform destroy -auto-approve",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domengabrovsek/telegram-notify-bot.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "notifications",
    "aws",
    "lambda",
    "serverless",
    "terraform"
  ],
  "author": "Domen GabrovÅ¡ek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/domengabrovsek/telegram-notify-bot/issues"
  },
  "homepage": "https://github.com/domengabrovsek/telegram-notify-bot#readme",
  "devDependencies": {
    "@types/node": "^24.6.1",
    "esbuild": "^0.25.10"
  },
  "dependencies": {
    "undici": "^7.16.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
